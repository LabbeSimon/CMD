/cms
│
├── /admin
│   ├── index.php           # Tableau de bord de l'administration
│   ├── pages.php           # Gestion des pages
│   ├── plugins.php         # Gestion des plugins
│
├── /includes
│   ├── header.php          # Navbar et header partagés
│   ├── footer.php          # Footer partagé
│   ├── functions.php       # Fonctionnalités partagées (hooks, etc.)
│
├── /pages
│   ├── home.php            # Page d'accueil
│   ├── page1.php           # Exemple de page 1
│   ├── page2.php           # Exemple de page 2
│
├── /plugins
│   ├── exemple_plugin.php  # Exemple de plugin compatible WordPress
│
├── index.php               # Page d'accueil avec inclusion dynamique
├── login.php               # Page de connexion pour l'admin
├── logout.php              # Déconnexion de l'admin
└── .htaccess               # Optionnel, pour gérer les URL rewrites
